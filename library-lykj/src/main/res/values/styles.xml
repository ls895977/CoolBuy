<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--<style name="AppBaseTheme" parent="Base.Theme.AppCompat">-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/theme_bg</item>
        <item name="android:textColorPrimary">@color/txt_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/CurToolbar</item>
    </style>

    <style name="CurToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="txtWhiteStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_default</item>
    </style>
    <style name="txtSmallGrayStyle">
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>
</resources>