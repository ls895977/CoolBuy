<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_index_head_bg"
    >

    <ImageView
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:src="@mipmap/icon_logo"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/head_index_weather"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="多云"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/head_index_temp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="00~00℃"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:text="今日限行"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/head_index_limit_first"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="和"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:gravity="bottom"
        />

    <TextView
        android:id="@+id/head_index_limit_last"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="2dp"
        />

    <TextView
        android:id="@+id/head_index_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:text="2000/01/01"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/head_index_week"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="星期一"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/head_index_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:text="00:01"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>
